                                th Заголовок таблицы
                                th Заголовок таблицы
                            tr.row
                                th Столбец таблицы
                                th Столбец таблицы
                            tr.row
                                th Столбец таблицы
                                th Столбец таблицы
                            tr.row
                                th Столбец таблицы
                                th Столбец таблицы


    section#tables
        .container
            +h2('Адаптивная таблица')
            .edit-content
                +responsiveTable({
                    head: ['Заголовок 1','Заголовок 2','Заголовок 3'],
                    body: {
                        0: ['123','123','123'],
                        1: ['123','123','123'],
                    }
                })
    +callbackPopup()
block scripts
    script(src="js/main.js")